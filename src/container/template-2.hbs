<div class="page">

    <div class="page content">
		<header class="page_block">
			<header class="header">
				<div class="">
					{{> logo}}
				</div>
	
				<nav class="header_nav">
					{{!-- {{> nav list=header isVertical=true}} --}}
					<div class="header_nav_right">
						{{> nav list=header}}
					</div>
				</nav>
			</div>
		</header>

		<section class="page_block">
			<div class="hero">
				{{#with hero}}
					{{> hero title=title text=text}}
					<a class="button" href="{{button.url}}">{{button.text}}</a>
				{{/with}}
			</div>
		</section>

		<section class="page_block">
			<div class="flex-container">
				{{#each preview}}
					{{> cardPreview class="flex-item" data=this}}
				{{/each}}
			</div>
		</section>

		<main class="page_block">
			<div class="main">
				<div class="row">
					<div class="col-12">
						<div class="list-header">
							<div>
								<h2 class="list-title"> list</h2>
							</div>

							<div>
								<div class="category-list">
									{{#each categories}}
										<button class="category-button">{{text}}</button>
									{{/each}}
								</div>
							</div>
						</div>
					</div>

					<div class="col-7">
						<div class="list">
							{{#each news}}
								{{> cardPost data=this}}
							{{/each}}
						</div>
					</div>

					<div class="col-5">
						<aside class="list-aside">
							<div class="about">
								<h4 class="about-title">About</h4>
								<p class="about-text">{{about}}</p>
							</div>

							{{> linkList data=archive title="Archive"}}
							{{> linkList data=social title="Social"}}
						</aside>
					</div>
				</div>
			</div>
		</main>

		
		<footer class="page_block">
			<div class="footer">
				<div>
					{{> logo}}
					<span class="footer_copyright">Copyright 2023-2024</span>
				</div>

				{{#each footer}}
					<div>
						<span class="footer_title">{{title}}</span>
						{{> nav list=links isVertical=true}}
					</div>
				{{/each}}
			</div>
		</footer>

    </div>
    
</div>